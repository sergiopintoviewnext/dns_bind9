zone "{{ dominio_directo }}" {
    type {{ type_directo }};
    file "/etc/bind/{{ file_directo }}";
};

zone "{{ dominio_inverso }}" {
    type {{ type_inverso }};
    file "/etc/bind/{{ file_inverso }}";
};